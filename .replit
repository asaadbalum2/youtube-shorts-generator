modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "ffmpeg-full", "freetype", "imagemagickBig", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "YouTube Shorts Generator"

[[workflows.workflow]]
name = "YouTube Shorts Generator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py autonomous"

[workflows.workflow.metadata]
outputType = "console"

# Web service configuration - expose port 8080
[deploy]
run = ["python", "main.py", "autonomous"]

# Expose the web service
[env]
PORT = "8080"